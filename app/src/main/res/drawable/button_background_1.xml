<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#3F51B5" />
            <gradient android:angle="-90" android:startColor="#3F51FF" android:endColor="#303F9F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#FF4081" />
            <solid android:color="#3F51FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#3F51FF" />
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>

</selector>